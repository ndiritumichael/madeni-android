<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.typicalgeek.madeni">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".views.Splash"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts"/>
        </activity>
        <activity
            android:name=".PasscodeActivity"
            android:label="@string/title_activity_passcode"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".HelpActivity"
            android:label="@string/title_activity_help"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.typicalgeek.madeni.MainActivity"/>
        </activity>
        <activity
            android:name=".views.RecoveryActivity"
            android:label="@string/title_activity_recovery"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".NewDebtActivity"
            android:label="@string/title_activity_new_debt"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.typicalgeek.madeni.MainActivity"/>
        </activity>
        <activity
            android:name=".DebtsActivity"
            android:label="@string/title_activity_debts"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.typicalgeek.madeni.MainActivity"/>
        </activity>
        <activity
            android:name=".PreferencesActivity"
            android:label="@string/title_activity_preferences"
            android:theme="@style/AppTheme.NoActionBar.BlendStatusBar">
        </activity>
        <activity
            android:name=".views.SummaryActivity"
            android:label="@string/title_activity_summary"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.typicalgeek.madeni.MainActivity"/>
        </activity>
        <activity
            android:name=".Setup"
            android:label="Setup"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>